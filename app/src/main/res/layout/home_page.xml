<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:background="@color/longin_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/home_page_top"
            android:background="@color/blue_top"/>

        <TextView
            android:id="@+id/home_page_city"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="正在获取当前位置。。"
            android:textColor="@color/wirte"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blue_top"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="bottom">

                <ImageView
                    android:id="@+id/home_page_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/weather"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/home_page_weather"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wirte"
                    android:text="当前天气"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginLeft="25dp"/>

                <TextView
                    android:id="@+id/home_page_now_temp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wirte"
                    android:text="当前温度"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom"
                android:layout_marginRight="25dp">

                <TextView
                    android:id="@+id/home_page_temp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="xx~xx℃"
                    android:textColor="@color/wirte"
                    android:textStyle="italic|bold"
                    android:textSize="35sp"
                    android:gravity="right"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/home_page_wind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wirte"
                    android:text="风力"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:gravity="right" />

                <TextView
                    android:id="@+id/home_page_trav"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wirte"
                    android:text="出行指数"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:gravity="right"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:id="@+id/home_page_cw"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wirte"
                    android:text="洗车建议"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <WebView
            android:id="@+id/home_page_webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>
